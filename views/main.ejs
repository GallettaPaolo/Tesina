<!DOCTYPE html>
<html>
<% include ./partials/header %>

  <body>


    <div class="row">

      <div class="col s12 m3 l3">

        <% include ./partials/sideNav %>
      </div>

       <div id="askmore" class="modal">
          <div class="modal-content">
            <h4>Un'ultima cosa!</h4>
            <p>Per utilizzare Athager&copy; devi inserire gli ultimi dati mancanti </p>
            <div class="container">
              <form>
                <div class="row">
              <div class="col s12 rolesDiv">
                <div class="input-field">
                  <select>
                    <option value="" disabled selected>Scegli un ruolo</option>
                    <% roles.forEach(function(role){ %>
                    <option  value=<%= role.name %>><%= role.name %> </option>
                    <%});%>
                  </select>
                  <label>Ruolo</label>
                </div>
              </div>
              <div class="input-field col s12 m5 hide specDiv">
                <div class="input-field">
             <select>
                    <option value="" disabled selected>Scegli specialità</option>
                    <% categories.forEach(function(category){ %>
                    <option  value=<%= category.categoryName %>><%= category.categoryName %> </option>
                    <%});%>
                  </select>
                  <label>Specialità</label>
                  </div>
            </div>
            </div>
              </form>
            </div>
          </div>
          <div class="modal-footer">
            <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
          </div>
        </div>

      <div class="col s12 m9 l9">
        <h1><%= actions[actions.length-1].action %></h1>
  
          <%
          var splitRows = 0; 
          competitions.forEach(function(competition){
           %>
           <% if(splitRows%3 == 0){%>
              <div class="row">
            <%} %>
           <div class="col s12 m4">
              <div class="card blue-grey darken-1 waves-effect">
                <div class="card-content white-text">
                  <span class="card-title"><%= competition.description %></span>
                  <ul>
                    <li class="scale"><%= competition.scale %></li>
                    <li class="date"><%= competition.date %></li> 
                  </ul>
                </div>
                <div class="card-action">
                  <a data-code=<%= competition._id%>>Iscriviti</a>
                </div>
              </div>
         </div>
          <%
          splitRows++; 
          if(splitRows%3 == 0){%>
              </div>
            <%} %>
           <% }) %>
      </div>
      </div>
    </div>
    <% include ./partials/footer %>
    <script src="javascripts/main.js"></script>
  </body>

</html>
