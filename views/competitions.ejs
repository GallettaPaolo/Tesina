          <div id="subscribe" class="modal bottom-sheet">
            <div class="modal-header">
              <h2>Scegli chi aggiungere al gruppo</h2>
            </div>
            <div class="modal-content">
              <ul class="athletes collection">

              </ul>
            </div>
            <div class="modal-footer">
              <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Aggiungi</a>
            </div>
          </div>

<%
          var splitRows = 0; 
          competitions.forEach(function(competition){
           %>
    <% if(splitRows%3 == 0){%>
        <div class="row">
            <%} %>
                <div class="col s12 m4">
                    <div class="card blue-grey darken-1 waves-effect">
                        <div class="card-content white-text">
                            <span class="card-title"><%= competition.description %></span>
                            <ul>
                                <li class="scale">Livello:
                                    <%= competition.scale %>
                                </li>
                                <li class="date">Data:
                                    <%= competition.date %>/17</li>
                                <li class="location">Localit√†:
                                    <%= competition.location %>
                                </li>
                            </ul>
                        </div>
                        <div class="card-action">
                            <a class="<%= (role == "Allenatore")? "subscribeAthlete": "subscribe" %> waves-effect" data-code=<%= competition._id%> <%=(role=="Allenatore")?'href=#subscribe': "" %> > <%= (role=="Allenatore")?"Iscrivi":"Iscriviti" %> </a>
                        </div> 
                    </div>
                </div>
                <%
          splitRows++; 
          if(splitRows%3 == 0){%>
        </div>
        <%} %>
            <% }) %>
            