<h1>
    Calendario Gare
</h1>

<%
          var splitRows = 0; 
          competitions.forEach(function(competition){
           %>
    <% if(splitRows%3 == 0){%>
        <div class="row">
            <%} %>
                <div class="col s12 m4">
                    <div class="card blue-grey darken-1 waves-effect">
                        <div class="card-content white-text">
                            <span class="card-title"><%= competition.description %></span>
                            <ul>
                                <li class="scale">Livello:
                                    <%= competition.scale %>
                                </li>
                                <li class="date">Data:
                                    <%= competition.date %>/17</li>
                                <li class="location">Localit√†:
                                    <%= competition.location %>
                                </li>
                            </ul>
                        </div>
                        <div class="card-action">
                            <a class="<%= (role == "Allenatore")? "subscribeAthlete": "subscribe" %> waves-effect" data-code=<%= competition._id%> <%=(role=="Allenatore")?'href=#addGroup': "" %> > <%= (role=="Allenatore")?"Iscrivi":"Iscriviti" %> </a>
                        </div> 
                    </div>
                </div>
                <%
          splitRows++; 
          if(splitRows%3 == 0){%>
        </div>
        <%} %>
            <% }) %>
            